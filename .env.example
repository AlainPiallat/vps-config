# =============================================================================
# VPS Configuration - Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values
# cp .env.example .env

# User Configuration
USER_NAME=vpsadmin
USER_EMAIL=admin@example.com

# Domain Configuration
DOMAIN=example.com

# Network Ports
SSH_PORT=22
HTTP_PORT=80
HTTPS_PORT=443
WIREGUARD_PORT=51820

# VPN Configuration
VPN_SERVER_IP=10.13.13.1
VPN_CLIENT_LAPTOP_IP=10.13.13.2
VPN_CLIENT_PHONE_IP=10.13.13.3
VPN_SUBNET=10.13.13.0/24

# Fail2Ban Settings
FAIL2BAN_BANTIME=3600
FAIL2BAN_FINDTIME=600
FAIL2BAN_MAXRETRY=5

# Timezone
TZ=Europe/Paris

# SSH Public Key (replace with your actual public key)
SSH_PUBLIC_KEY="ssh-rsa AAAAB3NzaC1yc2EAAAADAQABAAABAQC... your-public-key-here"

# Fetch IPv4 only (set to true to force IPv4)
# useful if your VPS has both IPv4 and IPv6 but you want to use only IPv4
FETCH_IPV4_ONLY=false